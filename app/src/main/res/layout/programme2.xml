<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#9C1E5381">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_format_align_justify_black_24dp"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="环境指标"
            android:layout_centerInParent="true"
            android:textSize="40sp"
            android:textColor="#fff"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#24B94E"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温度"
                android:textSize="24sp"
                android:layout_margin="10dp"/>


            <Button
                android:id="@+id/btn1"
                android:layout_width="49dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/circle"
                android:text="32"

                android:textColor="#fff" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="110dp"
                />


        </LinearLayout>

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            />



        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#24B94E"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湿度"
                android:textSize="24sp"
                android:layout_margin="10dp"/>


            <Button
                android:id="@+id/btn2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp"
                android:text="80"
                android:textColor="#fff"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="110dp"
                />


        </LinearLayout>

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#24B94E"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="光照"
                android:textSize="24sp"
                android:layout_margin="10dp"/>


            <Button
                android:id="@+id/btn3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp"
                android:text="567"
                android:textColor="#fff"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="110dp"
                />


        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#24B94E"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CQ2"
                android:textSize="24sp"
                android:layout_margin="10dp" />


            <Button

                android:id="@+id/btn4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp"
                android:text="324"
                android:textColor="#fff"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="110dp"
                />


        </LinearLayout>

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#24B94E"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM2.5"
                android:textSize="24sp"
                android:layout_margin="10dp"/>


            <Button
                android:id="@+id/btn5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:text="254"
                android:textColor="#fff"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="110dp"
                />


        </LinearLayout>

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:id="@+id/l6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F3E70C0C"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="道路状况"
                android:textSize="24sp" />


            <Button
                android:id="@+id/btn6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:background="@drawable/circle"
                android:layout_marginLeft="10dp"
                android:text="4"
                android:textColor="#fff"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="110dp" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>